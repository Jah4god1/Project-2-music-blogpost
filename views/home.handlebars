{{#each posts}}
  <div class="post">
    <h2>{{title}}</h2>
    <p>{{body}}</p>
    <p>Posted by {{user.username}}</p>
    <p>{{createdAt}}</p>
    
    <form action="/responses" method="POST" enctype="multipart/form-data">
      <input type="hidden" name="postId" value="{{id}}">
      <div>
        <label for="name">Name of Song:</label>
        <input type="text" name="name">
      </div>
      <div>
        <label for="artist">Artist:</label>
        <input type="text" name="artist">
      </div>
      <div>
        <label for="album">Album:</label>
        <input type="text" name="album">
      </div>
      <div>
        <label for="feelings">How does this song make you feel?</label>
        <textarea name="feelings"></textarea>
      </div>
      <div>
        <label for="image">Upload an Image:</label>
        <input type="file" name="image">
      </div>
      <button type="submit">Submit</button>
    </form>

    {{#each responses}}
      <div class="response">
        <p><strong>{{user.username}}:</strong></p>
        <p>{{text}}</p>
        {{#if image}}
          <img src="/uploads/{{image}}" alt="Response Image">
        {{/if}}
      </div>
    {{/each}}
  </div>
{{/each}}
