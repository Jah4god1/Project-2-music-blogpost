<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Handlebars Document</title>
  <!-- Add your CSS stylesheets -->
  <link rel="stylesheet" href="miccitest.css">
  <!-- Add Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>

<body>
  <!-- Navigation Bar -->
  <nav class="navbar navbar-expand-lg navbar-purple">
    <!-- Navbar content -->
  </nav>

  <!-- Main Content -->
  <div class="container">
    <!-- Image container and other elements -->
  </div>

  <div class="container">
    {{#each posts}}
    <div class="post">
      <h2>{{title}}</h2>
      <p>{{body}}</p>
      <p>Posted by {{user.username}}</p>
      <p>{{createdAt}}</p>
    
      <form action="/responses" method="POST" enctype="multipart/form-data">
        <input type="hidden" name="postId" value="{{id}}">
        <div>
          <label for="name">Name of Song:</label>
          <input type="text" name="name">
        </div>
        <div>
          <label for="artist">Artist:</label>
          <input type="text" name="artist">
        </div>
        <div>
          <label for="album">Album:</label>
          <input type="text" name="album">
        </div>
        <div>
          <label for="feelings">How does this song make you feel?</label>
          <textarea name="feelings"></textarea>
        </div>
        <div>
          <label for="image">Upload an Image:</label>
          <input type="file" name="image">
        </div>
        <button type="submit">Submit</button>
      </form>

      {{#each responses}}
      <div class="response">
        <p><strong>{{user.username}}:</strong></p>
        <p>{{text}}</p>
        {{#if image}}
        <img src="/uploads/{{image}}" alt="Response Image">
        {{/if}}
      </div>
      {{/each}}
    </div>
    {{/each}}
  </div>

  <!-- Add your JavaScript dependencies -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.7.7/handlebars.min.js"></script>
  
  <!-- Define your Handlebars template -->
  <script id="template" type="text/x-handlebars-template">
    <!-- Insert your modified code here -->
  </script>

  <!-- Compile the template and render with data -->
  <script>
    const data = {
      posts: [
        {
          title: "",
          body: "",
          user: {
            username: ""
          },
          createdAt: "",
          id: 1,
          responses: [
            {
              user

: {
username: "",
text: "",
image: ""
}
]
}
]
};

const template = Handlebars.compile(document.getElementById("template").innerHTML);
document.body.innerHTML = template(data);
  </script>
</body>
</html>







