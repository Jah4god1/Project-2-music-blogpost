<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Post</title>
    <link rel="stylesheet" href="/miccitest.css">
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
     <nav class="navbar navbar-expand-lg navbar-purple ">
        <a class="navbar-brand" href="#">Music Blog</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
          aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <style>
            .navbar-purple {
              background-color: rgba(248, 226, 255, 0.2);
            }
          </style>
        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item active">
              <a class="nav-link" href="#">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">About</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Login</a>
            </li>
          </ul>
        </div>
      </nav>

    <!-- Mood Selection  -->
    <div class="d-flex justify-content-center">
        <select id="pictureSelect">
          <option value="">--Please choose an option--</option>
          {{#each moodOptions}}
          <option value="{{this.value}}">{{this.text}}</option>
          {{/each}}
        </select>
    </div>

    <!-- ... rest of the body ... -->

    <!-- Post Form  -->
    <div class="container">
        <div class="form-container">
            <form>
                <div class="form-group">
                    <label for="inputSongTitle"></label>
                    <input type="text" class="form-control-sm d-block mx-auto" id="inputUsername" placeholder="Song Title" value="{{songTitle}}">
                    <label for="inputArtistBandName"></label>
                    <input type="password" class="form-control-sm d-block mx-auto" id="inputPassword" placeholder="Artist/Band Name" value="{{artistBandName}}">
                </div>
                <button type="submit" class="btn btn-primary btn-sm d-block mx-auto">Post</button>
            </form>
        </div>
     </div>  
    <script src="userpost.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</body> 
</html>
