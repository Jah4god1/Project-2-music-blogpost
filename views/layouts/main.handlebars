<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.7.7/handlebars.min.js"></script>
  <script id="template" type="text/x-handlebars-template">
    <nav class="navbar navbar-expand-lg navbar-purple ">
      <a class="navbar-brand" href="#">{{navbarBrand}}</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <style>
        .navbar-purple {
          background-color: rgb(248, 226, 255);
        }
      </style>

  <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item active">
        <a class="nav-link" href="#">Home</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">About</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Login</a>
      </li>
    </ul>
  </div>
</nav>

<div class="image-container">
  <img src="./Circles.png" class="img-fluid" alt="Image 1">
</div>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div class="row">
        <div class="col">
          <h1 class="text-bold">Share</h1>
          <h1 class="text-bold">Your</h1>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <h1 class="color-transition">Music</h1>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <h1 class="text-bold">Here</h1>
        </div>
      </div>
      <button class="btn btn-primary">Create Account</button>
    </div>
    <div class="col-md-6">
      <img src="./smiley-woman-with-headphones-working-laptop 1.png" class="img-fluid" alt="Image 1">
    </div>
  </div>
  <hr>
  <div class="container">


        <div class="row">
          <div class="col-md-4">
            <div class="row">
              <div class="col">
                <h1 class="text-bold">Music</h1>
                <h1 class="text-bold">Posts</h1>
              </div>
            </div>
            <div class="row">
              <div class="col">
                <h1 class="text-bold">Today</h1>
              </div>
            </div>
            <button class="btn btn-outline-secondary">See All Posts</button>
          </div>
          <div class="col-md-6">
            {{#each images}}
            <div class="col">
              <img src="{{this}}" class="img-fluid" alt="Image {{@index}}">
            </div>
            {{/each}}
          </div>
        </div>
      </div>
    </div>
  </script>

  <script>
    // Define your data object
    const data = {
      navbarBrand: "Music Blog",
      images: [
        "card 6 (1).png",
        "card 7 (1).png",
        "card 3 (1).png"
      ]
    };

    // Compile the Handlebars template
    const template = Handlebars.compile(document.getElementById("template").innerHTML);

    // Render the template with data
    document.body.innerHTML = template(data);
  </script>
  </body>

</html>


